# Oscar Environment Variables

# Firebase Client Configuration (Public)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin SDK (Server-side only)
# JSON string of the service account key, or leave empty for Application Default Credentials in Cloud Run
FIREBASE_SERVICE_ACCOUNT_KEY=

# SMTP Email Configuration (Namecheap cPanel)
SMTP_HOST=mail.yourdomain.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_email_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Oscar Zorgcoordinatie

# Google Cloud KMS Configuration
GOOGLE_CLOUD_PROJECT=oscar-healthcare
KMS_LOCATION=europe-west4
KMS_KEYRING=oscar-secure-messages
KMS_KEY_NAME=message-encryption-key

# SendSMSGate SMS Configuration
# Get your credentials at https://sendsmsgate.com
SENDSMSGATE_USER=your_username
SENDSMSGATE_PASSWORD=your_password
SENDSMSGATE_SENDER=Oscar

# Provider Portal Configuration
PROVIDER_PORTAL_BASE_URL=https://oscar-app-482297690628.europe-west1.run.app/provider/access
TOKEN_EXPIRY_HOURS=24
CODE_EXPIRY_MINUTES=10
CODE_MAX_ATTEMPTS=5

# Admin Portal Security
# Generate password hash: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH=$2a$10$YOUR_BCRYPT_HASH_HERE
